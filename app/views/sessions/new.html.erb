<form action="<%= sessions_url %>" method="post">

  <label for="username">Username</label>
  <input
    type="text"
    name="user[username]"
    id="username"
    value="<%= params[:user][:username] %>">

  <label for="Password">Password</label>
  <input
    type="password"
    name="user[password]"
    id="Password"
  >

  <input type="submit" value="Log in!">
</form>
